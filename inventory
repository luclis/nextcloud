# Nextcloud LDAP Setup

nextcloud_ldap_host               = "ldaps://ad.luclis.xyz"
nextcloud_ldap_bind_account       = "CN=svc_nextcloud,OU=SERVICE,DC=luclis,DC=xyz"
nextcloud_ldap_bind_password      = ""
nextcloud_ldap_base               = "DC=luclis,DC=xyz"
nextcloud_ldap_base_groups        = {{ nextcloud_ldap_base }}
nextcloud_ldap_base_users         = {{ nextcloud_ldap_base }}
nextcloud_ldap_username_attribute = "sAMAccountName"
nextcloud_ldap_gid_attribute      = "gidNumber"
nextcloud_ldap_group_displayname  = "cn"
nextcloud_ldap_user_displayname   = "displayname"
nextcloud_ldap_group_filter       = "(&(|(objectclass=group))(|(cn=Nextcloud Admin PRJ)))"
nextcloud_ldap_login_filter       = "(&(&(objectclass=user)(|(memberof=CN=Nextcloud User PRJ,CN=Users,DC=luclis,DC=xyz))(memberof=CN=Nextcloud Admin PRJ,CN=Users,DC=luclis,DC=xyz)))(samaccountname=%uid))"
nextcloud_ldap_user_filter        = "(&(objectclass=user)(|(memberof=CN=Nextcloud User PRJ,CN=Users,DC=luclis,DC=xyz)(memberof=CN=Nextcloud Admin PRJ,CN=Users,DC=luclis,DC=xyz))"

